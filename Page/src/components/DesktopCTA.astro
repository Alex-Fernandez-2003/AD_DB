---
import { Image } from 'astro:assets';
---

<section class="bg-black py-32 px-4">
    <div class="container mx-auto max-w-6xl">
      <div class="bg-gray-800 rounded-3xl p-12 flex flex-col items-center justify-center text-center overflow-hidden">
        <div class="max-w-2xl mb-8">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            Optimiza tu rendimiento SQL
          </h2>
          <p class="text-xl text-gray-300 mb-8">
            Monitorea, analiza y mejora tus bases de datos.
          </p>
          <button class="bg-purple-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-purple-700 transition duration-300">
            Inicia tu prueba gratuita
          </button>
        </div>
        <div class="w-full mt-12">
        <Image 
            src="/macbook-mockup.png" 
            alt="MacBook mostrando SQL Monitor" 
            width={1040} 
            height={642}
            class="w-full h-auto"
          />
        </div>
      </div>
    </div>
  </section>
  
  